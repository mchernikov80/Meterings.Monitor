@model IList<MonitoringWeb.Models.MeteringDeviceModel>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Тип счетчика</th>
            <th>Серийный номер счетчика</th>
            <th>Дата следующей поверки счетчика</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.DeviceType</td>
                    <td>@item.SerialNo</td>
                    <td>@(item.CheckDate?.ToShortDateString())</td>
                </tr>
            }
        }
    </tbody>
</table>
